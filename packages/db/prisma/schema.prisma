// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id               String            @id @default(uuid())
  email            String
  name             String
  organizationID   String?
  organizationName String?
  role             Roles?
  DaysToWork       DaysToWork[]
  daysApproved     daysApprovedOff[]
  numberOfDaysOff  Int?
  sickDays         Int?
  paidTimeOff      Int?
}

model Organization {
  id               String              @id @default(uuid())
  name             String
  email            String
  employeeID       String?
  daysNotToWork    DaysNotToBeWorked[]
  EmployeesWorking Int?
  //EmployeesNotWorking //object? // Note: Might be able to programmaticly do this
}

model DaysNotToBeWorked {
  id             String       @id @default(uuid())
  date           DateTime
  description    String
  organizationID String
  organization   Organization @relation(fields: [organizationID], references: [id])
}

model DaysToWork {
  id         Int      @id @default(autoincrement())
  day        DateTime
  startTime  DateTime
  endTime    DateTime
  employeeID String
  employee   Employee @relation(fields: [employeeID], references: [id])
}

model daysApprovedOff {
  id             Int      @id @default(autoincrement())
  day            DateTime
  approvedByID   String
  approvedByName String
  dateApproved   DateTime
  timeApproved   DateTime
  employeeID     String
  employee       Employee @relation(fields: [employeeID], references: [id])
}

enum Roles {
  EMPLOYEE
  MANAGER
  OWNER
  ASSISTANT_MANAGER
  PAYROLL
}
